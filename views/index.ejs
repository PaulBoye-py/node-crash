<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/nav.ejs')  %>

    <div class="all-blogs blogs">
        <h2>All Blogs</h2>

        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <!-- Dynamic fetching of blog id and assigning it as a parameter to the url of each blog -->
                <a class="single" href="/blogs/<%= blog._id %>">               
                    <h3 class="title"><%= blog.title %></h3>
                    <p class="snippet"><%= blog.snippet %></p>
                </a>
            <% }); %>
       <% } else { %>
        <p>No blogs to display.</p>
       <% }%>
    </div>
</body>
<%- include('./partials/footer.ejs')  %>
</html>